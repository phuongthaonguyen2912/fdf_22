<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".logo"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".link_home"), root_path %></li>
        <li><%= link_to t(".link_help"), "/static_pages/help" %></li>
        <% if logged_in? %>
          <% if current_user.is_admin? %>
            <li><%= link_to t("layouts.header.users"), admin_users_path %></li>
            <li><%= link_to t("layouts.header.product_suggests"),
              admin_product_suggests_path %></li>
            <li><%= link_to t("layouts.header.orders"), admin_orders_path %></li>
          <% else %>
            <li><%= link_to t("layouts.header.product_suggests"), product_suggests_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "layouts.header.account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.header.profile"), current_user %></li>
              <li><%= link_to t("layouts.header.setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("layouts.header.logout"), logout_path,
                  method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layouts.header.login"), login_path %></li>
          <li><%= link_to t(".link_signup"), signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

<div class="col-md-4 column productbox">
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.url, class: "home_image_prd" %>
    <div class="name"><%= product.name %></div>
  <%end%>
  <div class="productprice">
    <div class="pricetext"><%= number_to_currency product.price %></div>
  </div>
  <div class="pull-left">
    <%= form_for @supports.order_item, remote: true do |f| %>
      <div class="input-group">
        <%= f.number_field :quantity,
          class: "form-control", min: Settings.min_quantity,
          placeholder: t(".enter_a_number"), required: :required %>
        <div class="input-group-btn">
          <%= f.hidden_field :product_id, value: product.id %>
          <%= f.hidden_field :price, value: product.price %>
          <%= f.submit t(".btn_text"), class: "btn btn-primary" %>
        </div>
      </div> 
    <% end %> 
  </div>
</div>
